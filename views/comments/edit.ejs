<% include ../partials/header %>

<h1> HELLO</h1>

<div class="container text-center">
    <div class="row">
        <h1>Edit comment !</h1>
        <div class="inputs">
            <form action='/campgrounds/<%=campground_id%>/comments/<%=comment._id%>?_method=PUT' method='POST'>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%=comment.content%>" name='content'>
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-primary btn-block" type="submit" value="Submit!">
                 </div>
            </div>
        </form>
        <a href="/campgrounds/<%=campground_id%>" type="button">Go Back!</a>
    </div>
</div>


