<% include ../partials/header %>

<div class="container" id="show-container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">find Em</p>
            <!--<div class="list-group">-->
            <!--    <li class="list-group-item active">Option 1</li>-->
            <!--    <li class="list-group-item">Option 2</li>-->
